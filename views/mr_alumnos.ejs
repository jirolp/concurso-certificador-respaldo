<%- include("plantilla/mr_cabecera")%>
<div class="container mt-5">
    <div class="mb-5">
        <h1 class="title">GESTIONAR ALUMNOS</h1>
    </div>
    
    <a href="/mr_alumnosNuevo" class="btn btn-primary mt-2">Add Alumno</a>
    <table class="table table-hover mt-2">
        <thead>
            <tr>
                <th>IdAutor</th>
                <th>Apellidos</th>
                <th>Nombres</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>IdCarrera</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% results.forEach((user)=>{%>
            <tr>
                <td><%= user.IdAutor %></td>
                <td><%= user.Apellidos %></td>
                <td><%= user.Nombres %></td>
                <td><%= user.Direccion %></td>
                <td><%= user.Telefono %></td>
                <td><%= user.IdCarrera %></td>
                <td>
                    <a href="/mr_alumnosedit/<%= user.IdAutor %>" class="btn btn-warning"><img src="icons/edit.png"/></a>
                    <a href="/mr_alumnosdelete/<%= user.IdAutor %>" class="btn btn-danger"><img src="icons/delete.png"/></a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include("plantilla/mr_footer")%>